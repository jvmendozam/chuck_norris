<div class="col-md-12">
  <div class="container text-center ">
    <div class="row">
      <%= form_with(url: send_mail_searches_path , method: "post") do %>
        <%= label_tag(:email,  t('send_by_email')) %>
        <%= text_field_tag(:email, "", class: "search-button" ) %>
        <%= hidden_field_tag 'search', @search.id %>
        <%= submit_tag(t('send'), class: "btn btn-primary search-button") %>
      <% end %>
    </div>
  </div>
</div>

